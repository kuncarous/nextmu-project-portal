---
import * as m from '~/paraglide/messages';
import Layout from '~/layouts/Layout.astro';
import Header from '~/components/Header.astro';
import Footer from '~/components/Footer.astro';
import { Icon } from '@steeze-ui/svelte-icon';
import { Github } from '@steeze-ui/simple-icons';
---

<Layout title="NextMU">
    <div class="container"></div>
    <Header selected="about-us" />
    <main class="mt-[2rem] flex grow flex-col gap-14 text-white px-2">
        <div
            class="flex flex-col items-center text-4xl font-bold uppercase drop-shadow-text"
        >
            {m.page_aboutus_title()}
        </div>
        <div
            class="flex max-w-4xl flex-col items-center self-center text-xl drop-shadow-text max-md:max-w-[80%]"
        >
            <span class="text-center" set:html={m.aboutus_message()} />
        </div>
        <div
            class="flex max-w-4xl flex-col items-center self-center text-xl drop-shadow-text max-md:max-w-[80%]"
        >
            <span class="text-center font-medium"
                >{m.aboutus_lastmessage()}</span
            >
        </div>
    </main>
    <Footer />
</Layout>

<style lang="scss">
    body {
        &::before,
        .container {
            z-index: -1;
            background: url('/images/background.about-us.webp') center top
                repeat repeat;
            content: ' ';
            position: fixed;
            min-width: 100vw;
            min-height: 100vh;
        }
        &::before {
            filter: blur(16px);
        }
        .container {
            background-repeat: no-repeat;
            box-shadow: inset 100vw 1px rgba(64, 68, 75, 0.6);
        }
    }
</style>
